<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% stylesheets
            'assets/css/fop.css'
            'vendor/fontawesome/css/font-awesome.min.css' filter='cssrewrite' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>

        <nav id="site-navbar" class="navbar navbar-inverse navbar-static-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#site-navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('homepage') }}">FOP</a>
                </div>
                <div class="collapse navbar-collapse" id="site-navbar-collapse">
                    {{ knp_menu_render('main', { 'style': 'navbar' }) }}
                    {{ knp_menu_render('user', { 'style': 'navbar-right' }) }}
                    {{ knp_menu_render('locale_switcher', { 'currentClass': '', 'template': ':menu:locale_switcher.html.twig', 'style': 'navbar-right' }) }}
                </div>
            </div>
        </nav>

        {% block body %}{% endblock %}

        <footer id="site-footer">
            <div class="container clearfix">
                <p>&copy; {{ 'footer.copyright'|trans }}</p>
                <nav>
                    {{ knp_menu_render('footer', { 'currentClass': '', 'style': 'inline' }) }}
                </nav>
            </div>
        </footer>

        {% block requirejs include("requirejs.html.twig") %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
