{% extends '::base.html.twig' %}

{% block title %}{{ 'standings.constructor.heading'|trans({ '%year%': season.year }) }}{% endblock %}

{% block content %}
    <div class="section section-inverse">
        <div class="container">
            <h1 class="text-center">{{ 'standings.constructor.heading'|trans({ '%year%': season.year }) }}</h1>
        </div>
    </div>
    <div class="container">
        {% if standings is not empty %}
            <ol class="list-standings">
                {% for item in standings %}
                    <li data-position="{{ item.position }}">
                        <span class="name">{{ item.constructor.name }}</span>
                        <span class="nationality"><img src="{{ asset('assets/img/flags/' ~ item.constructor.nationality|lower ~ '.svg') }}" alt="{{ item.constructor.nationality|country }}" data-hover="tooltip" data-placement="bottom" title="{{ item.constructor.nationality|country }}"/></span>
                        <span class="car" aria-hidden="true"><img src="{{ asset_if('assets/img/seasons/' ~ season.year ~ '/cars/' ~ item.constructor.slug ~ '.png', 'assets/img/seasons/default/car.png') }}" alt="{{ item.constructor.name }}"/></span>
                        <span class="points">{{ item.points }}</span>
                    </li>
                {% endfor %}
            </ol>
        {% endif %}
    </div>
{% endblock %}
