{% extends ':season:layout.html.twig' %}

{% block content %}
    {{ parent() }}


    {% for race in season.races %}
        <section class="section section-inverse">
            <div class="background" style="background-image:url('{{ asset('assets/img/circuits/' ~ race.circuit.slug ~ '.jpg') }}')"></div>
            <div class="container">
                <h1 class="h4 text-muted">{{ 'homepage.next-race.title'|trans }}</h1>
                <h2 lang="en" class="section-heading"><span class="text-primary">{{ race.season.year }}</span> {{ race.name }}</h2>
                <ul class="list-highlight">
                    <li id="next-race-country">
                        <img class="flag" src="{{ asset('assets/img/flags/' ~ race.circuit.country|lower ~ '.svg') }}" data-hover="tooltip" data-placement="bottom" title="{{ race.circuit.country|country }}"/>
                    </li>
                    <li id="next-race-round">
                        <span class="bg-concrete">{{ 'homepage.next-race.round'|trans }}</span>
                        <span class="bg-silver">{{ race.round }}</span>
                    </li>
                    <li id="next-race-date">
                        <span class="bg-turquoise"><span class="fa fa-calendar" aria-label="{{ 'homepage.next-race.date'|trans }}"></span></span>
                        <span class="bg-green-sea">{{ race.date|format_date }}</span>
                    </li>
                    <li id="next-race-time">
                        <span class="bg-turquoise"><span class="fa fa-clock-o" aria-label="{{ 'homepage.next-race.time'|trans }}"></span></span>
                        <span class="bg-green-sea" data-load="localize" data-date="{{ race.date.format('Y-m-d H:i:s') }}" data-format="HH:mm">{{ race.date|format_time }}</span>
                    </li>
                    {% if race.hasResults %}
                        <li id="next-race-winner">
                            <span class="bg-orange"><span class="fa fa-trophy" aria-label="{{ 'homepage.next-race.winner'|trans }}" data-hover="tooltip" data-placement="bottom" title="{{ 'homepage.next-race.winner'|trans }}"></span></span>
                            <span class="bg-sun-flower">{{ race.results.first.team.driver.shortName }}</span>
                        </li>
                    {% endif %}
                    {% if race.hasResults and race.hasPredictions %}
                        <li id="next-race-winner">
                            <span class="bg-orange"><span class="fa fa-trophy" aria-label="{{ 'homepage.next-race.winner'|trans }}" data-hover="tooltip" data-placement="bottom" title="{{ 'homepage.next-race.winner'|trans }}"></span></span>
                            <span class="bg-sun-flower">{{ race.predictions.first.user.username }}</span>
                        </li>
                    {% endif %}
                </ul>
                <p><a class="btn btn-primary btn-lg" href="{{ path('race', { 'season': race.season.year, 'round': race.round }) }}" role="button">Learn more Â»</a></p>
            </div>
        </section>
    {% endfor %}
    
    <div class="container">
        {% if season.races.isEmpty %}
            no data
        {% else %}
            <div class="table-responsive">
                <table id="races" class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">{{ 'season.races.round'|trans }}</th>
                            <th scope="col">{{ 'season.races.name'|trans }}</th>
                            <th scope="col">{{ 'season.races.circuit'|trans }}</th>
                            <th scope="col">{{ 'season.races.country'|trans }}</th>
                            <th scope="col">{{ 'season.races.date'|trans }}</th>
                            <th scope="col">{{ 'season.races.time'|trans }}</th>
                            <th scope="col">{{ 'season.races.winner.driver'|trans }}</th>
                            <th scope="col">{{ 'season.races.winner.user'|trans }}</th>
                            <th scope="col">{{ 'season.races.winner.actions'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for race in season.races %}
                            <tr>
                                <td>{{ race.round }}</td>
                                <td lang="en">{{ race.name }}</td>
                                <td>{{ race.circuit.name }}</td>
                                <td>{{ race.circuit.country|country }}</td>
                                <td>{{ race.date|format_date }}</td>
                                <td data-load="localize" data-date="{{ race.date.format('Y-m-d H:i:s') }}" data-format="HH:mm">{{ race.date|format_time }}</td>
                                <td>{% if race.hasResults %}{{ race.results.first.team.driver.shortName }}{% endif %}</td>
                                <td>{% if race.hasResults and race.hasPredictions %}{{ race.predictions.first.user.username }}{% endif %}</td>
                                <td><a class="btn" href="{{ path('race', { 'season': season.year, 'round': race.round }) }}">SEE</a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
{% endblock %}
