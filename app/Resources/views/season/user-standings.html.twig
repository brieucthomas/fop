{% extends '::base.html.twig' %}

{% block title %}{{ 'standings.user.heading'|trans({ '%year%': season.year }) }}{% endblock %}

{% block content %}
    <div class="section section-inverse">
        <div class="container">
            <h1 class="text-center">{{ 'standings.user.heading'|trans({ '%year%': season.year }) }}</h1>
        </div>
    </div>
    <div class="container">
        <ol class="list-standings">
            {% for item in standings %}
                <li data-position="{{ item.position }}">
                    <span class="name">{{ item.user.username }}</span>
                    <span class="points">{{ item.points }}</span>
                </li>
            {% endfor %}
        </ol>
    </div>
{% endblock %}
